<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/forget_password_background"
    tools:context=".ForgetPassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forget passowrd"
            android:textColor="@color/BlueViolet"
            android:textSize="40sp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            style="@style/TextAppearance.MaterialComponents.Headline1"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            app:cardElevation="8dp"
            android:layout_margin="15dp"
            app:cardCornerRadius="5dp"
            android:padding="10dp">
            <!-- Email -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:textColorHint="@color/md_green_400"
                android:padding="20dp"
                android:layout_margin="5dp"
                android:layout_gravity="top"
                android:inputType="textEmailAddress"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:drawableTint="@color/Teal"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone no"
                android:textColorHint="@color/md_green_400"
                android:padding="20dp"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:inputType="phone"
                android:drawableLeft="@drawable/ic_phone_black_24dp"
                android:drawableTint="@color/Teal"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date of birth"
                android:textColorHint="@color/md_green_400"
                android:padding="20dp"
                android:layout_margin="5dp"
                android:layout_gravity="bottom"
                android:id="@+id/day_picker_selected_date_layout"
                android:drawableLeft="@drawable/ic_date_range_black_24dp"
                android:drawableTint="@color/Teal"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:onClick="Register"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="5dp"
            app:cardBackgroundColor="@color/BlueViolet"
            android:layout_gravity="end"
            >
            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="OK"
                android:padding="5dp"
                android:textColor="@color/White"
                android:textSize="25sp"
                android:gravity="center"
                />
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>